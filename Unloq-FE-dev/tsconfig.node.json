{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023", "DOM"],             // <-- include DOM types
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react-jsx",                    // <-- needed for React 17+
    "skipLibCheck": true
  },
  "include": ["src", "vite.config.ts"]    // <-- include your whole source
}
